<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pokemon.co.id">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_international_pok_mon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_international_pok_mon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokemon">
        <activity android:name=".view.activity.MainActivity"
            android:theme="@style/Theme.Pokemon.Full"/>
        <activity
            android:name=".view.activity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Pokemon.Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>