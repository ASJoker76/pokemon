<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.HomeFragment"
    android:background="@color/purple_500">

    <ImageView
        android:id="@+id/iv_judul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_international_pok_mon_logo"/>
    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintTop_toBottomOf="@id/iv_judul"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/listitempokemon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>